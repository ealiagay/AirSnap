{
  "name": "nest-typeorm-docker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "LOG_SQL=true LOG_CONSOLE=true LOG_LEVEL=debug npm run start:dev",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch -r tsconfig-paths/register",
    "start:debug": "nest start --debug --watch -r tsconfig-paths/register",
    "start:prod": "NODE_ENV=production node -r tsconfig-paths/register dist/main.js",
    "build": "nest build",
    "prebuild": "rimraf dist || true",
    "typeorm": "node --require ts-node/register --require tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate src/database/migrations/20251004_init -d src/database/data-source.cli.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/database/data-source.cli.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/database/data-source.cli.ts",
    "migration:show": "npm run typeorm -- migration:show -d src/database/data-source.cli.ts",
    "schema:drop": "npm run typeorm -- schema:drop -d src/database/data-source.ts",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:restart": "npm run db:down && npm run db:up",
    "db:logs": "docker compose logs -f db",
    "db:status": "docker compose ps",
    "db:reset": "npm run schema:drop && npm run migration:run",
    "format": "prettier --write \"src/**/*.ts\"",
    "format-check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/typeorm": "^10.0.0",
    "axios": "^1.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "nodemailer": "^7.0.6",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cron": "^2.0.1",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^7.0.2",
    "cross-env": "^10.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.0"
  }
}
